{
  "name": "@feelso/louder",
  "version": "0.1.4",
  "description": "AI coding assistant notification plugin for Claude Code and OpenCode",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./claude": {
      "import": "./dist/claude/index.js",
      "types": "./dist/claude/index.d.ts"
    },
    "./opencode": {
      "import": "./dist/opencode/index.js",
      "types": "./dist/opencode/index.d.ts"
    }
  },
  "bin": {
    "louder-claude-hook": "./dist/bin/claude-hook.js"
  },
  "files": [
    "dist",
    "hooks",
    "native"
  ],
  "scripts": {
    "build": "tsup",
    "build:native": "cd native && ./build.sh",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit",
    "postinstall": "node -e \"process.platform === 'darwin' && require('child_process').execSync('./native/build.sh', {stdio: 'inherit'})\" || true",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "claude",
    "claude-code",
    "opencode",
    "notification",
    "ai",
    "assistant",
    "productivity"
  ],
  "author": "feelso",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/feelsodev/louder.git"
  },
  "bugs": {
    "url": "https://github.com/feelsodev/louder/issues"
  },
  "homepage": "https://github.com/feelsodev/louder#readme",
  "devDependencies": {
    "@opencode-ai/plugin": "^1.1.42",
    "@types/node": "^22.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vitest": "^2.0.0"
  },
  "dependencies": {
    "cosmiconfig": "^9.0.0",
    "zod": "^3.24.0"
  },
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "@opencode-ai/plugin": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
